<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example1.mycanteen.Menudetail" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_x="16dp"
        android:layout_y="204dp"
        android:columnCount="2" >
    </GridLayout>

    <ImageView
        android:id="@+id/updatemenuimageView1"
        android:layout_width="420px"
        android:layout_height="420px"
        android:layout_x="145dp"
        android:layout_y="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/xs01" />

    <TextView
        android:id="@+id/updatemenutextview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-3dp"
        android:layout_y="-1dp"
        android:text="@string/hello_world"
        android:textSize="16pt" />

    <LinearLayout
        android:id="@+id/updatemenulinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_x="15dp"
        android:layout_y="122dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/updatemenutextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜名："
            android:textSize="8pt" />

        <TextView
            android:id="@+id/updatemenutextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:textSize="8pt" />

        <TextView
            android:id="@+id/updatemenutextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="3"
            android:text="介绍："
            android:textSize="8pt" />

        <TextView
            android:id="@+id/updatemenutextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <Button
        android:id="@+id/updatemenubutton1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_x="21dp"
        android:layout_y="276dp"
        android:minHeight="2dp"
        android:minWidth="2dp"
        android:text="提交" />

    <EditText
        android:id="@+id/updatemenueditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="112dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/updatemenueditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="116dp"
        android:layout_y="162dp"
        android:ems="10" />

    <EditText
        android:id="@+id/updatemenueditText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="112dp"
        android:layout_y="230dp"
        android:ems="10" />

</AbsoluteLayout>

